# PingIDM Instance 2 (Fallback) Environment Variables
# Last Updated: 2025-11-04

# Container Configuration
CONTAINER_NAME=idm2-container
HOSTNAME=idm2-container
NETWORK_IP=172.20.0.22

# Port Mappings (Host:Container)
HTTP_PORT=8080
HTTPS_PORT=8443
MUTUAL_AUTH_PORT=8444

# Port Mappings for Host
HOST_HTTP_PORT=8091
HOST_HTTPS_PORT=8454
HOST_MUTUAL_AUTH_PORT=8556

# IDM Configuration
INSTANCE_ID=idm2
OPENIDM_HOST=idm2-container

# Java Options
JAVA_OPTS=-Xms2g -Xmx4g -XX:+UseG1GC -XX:MaxGCPauseMillis=200 -server
OPENIDM_OPTS=-Xms2g -Xmx4g

# Repository Configuration (DS Connection - Note DS2 is primary for IDM2)
REPO_PRIMARY_HOST=ds2-container
REPO_PRIMARY_PORT=1636
REPO_SECONDARY_HOST=ds1-container
REPO_SECONDARY_PORT=1636
REPO_BIND_DN=cn=Directory Manager
REPO_BIND_PASSWORD=ChangeMe123!

# Clustering
CLUSTER_ENABLED=true
CLUSTER_NAME=idm-cluster

# Admin Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin

# Volume Paths (relative to docker-compose.yml location)
CONF_VOLUME=./conf
CONNECTORS_VOLUME=./connectors
SCRIPT_VOLUME=./script
LOGS_VOLUME=./logs
INSTALL_PATH=../shared/install/openidm

# External System Connectors (Optional - Configure as needed)
MSSQL1_HOST=your-sql-server1.example.com
MSSQL1_PORT=1433
MSSQL1_DATABASE=IdentityDB1
MSSQL1_USER=idm_service
MSSQL1_PASSWORD=ChangeMe123!

MSSQL2_HOST=your-sql-server2.example.com
MSSQL2_PORT=1433
MSSQL2_DATABASE=IdentityDB2
MSSQL2_USER=idm_service
MSSQL2_PASSWORD=ChangeMe123!

AD_HOST=your-ad-server.example.com
AD_PORT=636
AD_BASE_DN=OU=Users,DC=corp,DC=example,DC=com
AD_BIND_DN=CN=IDM Service,OU=Service Accounts,DC=corp,DC=example,DC=com
AD_BIND_PASSWORD=ChangeMe123!
