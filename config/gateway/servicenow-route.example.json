{
  "name": "ServiceNow-Protected-Route",
  "comment": "Route configuration for protecting ServiceNow instance with ForgeRock IG",
  "condition": "${matches(request.uri.path, '^/api/.*')}",
  "baseURI": "https://your-instance.service-now.com",
  "heap": [
    {
      "name": "AmService",
      "type": "AmService",
      "comment": "Connection to ForgeRock Access Management",
      "config": {
        "url": "http://pingam.devnetwork.dev:8081/am",
        "realm": "/",
        "version": "8.0",
        "agent": {
          "username": "ig-agent",
          "passwordSecretId": "agent.secret.id"
        },
        "sessionCache": {
          "enabled": true,
          "executor": "ScheduledExecutorService"
        },
        "notifications": {
          "enabled": true
        }
      }
    },
    {
      "name": "ReverseProxyHandler",
      "type": "ReverseProxyHandler",
      "comment": "Proxy requests to ServiceNow backend",
      "capture": "all"
    }
  ],
  "handler": {
    "type": "Chain",
    "config": {
      "filters": [
        {
          "name": "LoggingFilter",
          "type": "LoggingFilter",
          "comment": "Log requests for audit",
          "config": {
            "logRequest": true,
            "logResponse": true
          }
        },
        {
          "name": "OAuth2ResourceServerFilter",
          "type": "OAuth2ResourceServerFilter",
          "comment": "Validate OAuth2 access tokens",
          "config": {
            "scopes": [
              "openid",
              "profile",
              "email"
            ],
            "requireHttps": false,
            "realm": "ForgeRock",
            "accessTokenResolver": {
              "name": "token-resolver",
              "type": "TokenIntrospectionAccessTokenResolver",
              "config": {
                "endpoint": "http://pingam.devnetwork.dev:8081/am/oauth2/introspect",
                "providerHandler": {
                  "type": "Chain",
                  "config": {
                    "filters": [
                      {
                        "type": "HttpBasicAuthenticationClientFilter",
                        "config": {
                          "username": "ig-agent",
                          "passwordSecretId": "agent.secret.id"
                        }
                      }
                    ],
                    "handler": "ForgeRockClientHandler"
                  }
                }
              }
            },
            "cache": {
              "enabled": true,
              "executor": "ScheduledExecutorService",
              "maximumSize": 10000,
              "expireAfterWriteSeconds": 3600
            }
          }
        },
        {
          "name": "PolicyEnforcementFilter",
          "type": "PolicyEnforcementFilter",
          "comment": "Enforce authorization policies",
          "config": {
            "pepRealm": "/",
            "application": "ServiceNow",
            "ssoTokenSubject": "${contexts.sts.token}",
            "amService": "AmService",
            "claimsSubject": {
              "jwt": "${contexts.oauth2.accessToken.token}",
              "claims": "${contexts.oauth2.accessToken.info}",
              "subject": "${contexts.oauth2.accessToken.info.sub}"
            }
          }
        },
        {
          "name": "HeaderFilter-Security",
          "type": "HeaderFilter",
          "comment": "Add security headers to response",
          "config": {
            "messageType": "RESPONSE",
            "add": {
              "Strict-Transport-Security": [
                "max-age=31536000; includeSubDomains"
              ],
              "X-Frame-Options": [
                "DENY"
              ],
              "X-Content-Type-Options": [
                "nosniff"
              ],
              "X-XSS-Protection": [
                "1; mode=block"
              ],
              "Content-Security-Policy": [
                "default-src 'self'"
              ],
              "Referrer-Policy": [
                "no-referrer"
              ],
              "Permissions-Policy": [
                "geolocation=(), microphone=(), camera=()"
              ]
            },
            "remove": [
              "Server",
              "X-Powered-By"
            ]
          }
        },
        {
          "name": "ThrottlingFilter",
          "type": "ThrottlingFilter",
          "comment": "Rate limiting for DoD compliance",
          "config": {
            "requestGroupingPolicy": "${request.headers['X-Forwarded-For'][0]}",
            "rate": {
              "numberOfRequests": 100,
              "duration": "1 minute"
            },
            "throttlingRatePolicy": {
              "type": "FixedRateThrottlingPolicy",
              "config": {
                "rate": {
                  "numberOfRequests": 100,
                  "duration": "1 minute"
                }
              }
            }
          }
        }
      ],
      "handler": "ReverseProxyHandler"
    }
  }
}
