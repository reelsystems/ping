# PingAM Instance 2 (Fallback) Environment Variables
# Last Updated: 2025-11-04

# Container Configuration
CONTAINER_NAME=am2-container
HOSTNAME=am2-container
NETWORK_IP=172.20.0.32

# Port Mappings (Host:Container)
HTTP_PORT=8080
HTTPS_PORT=8443

# Port Mappings for Host
HOST_HTTP_PORT=8101
HOST_HTTPS_PORT=8501

# Tomcat Configuration
CATALINA_OPTS=-Xms4g -Xmx4g -XX:+UseG1GC -XX:MaxGCPauseMillis=200 -server

# AM Configuration
AM_SERVER_URL=http://localhost:8101/am
COOKIE_DOMAIN=.example.com
SITE_NAME=ping-site
SITE_PRIMARY=false
LOAD_BALANCER_URL=http://localhost:8100/am

# Directory Server Configuration (Config Store - Using DS2 for AM2)
CONFIG_STORE_HOST=ds2-container
CONFIG_STORE_PORT=1636
CONFIG_STORE_SUFFIX=ou=am-config,dc=example,dc=com
CONFIG_STORE_BIND_DN=cn=Directory Manager
CONFIG_STORE_PASSWORD=ChangeMe123!
CONFIG_STORE_SSL=true

# Directory Server Configuration (Identity Store)
IDENTITY_STORE_HOST=ds2-container
IDENTITY_STORE_PORT=1636
IDENTITY_STORE_SUFFIX=ou=identities,dc=example,dc=com
IDENTITY_STORE_BIND_DN=cn=Directory Manager
IDENTITY_STORE_PASSWORD=ChangeMe123!
IDENTITY_STORE_SSL=true

# Directory Server Configuration (CTS Store)
CTS_STORE_HOST=ds2-container
CTS_STORE_PORT=1636
CTS_STORE_SUFFIX=ou=tokens,dc=example,dc=com
CTS_STORE_BIND_DN=cn=Directory Manager
CTS_STORE_PASSWORD=ChangeMe123!
CTS_STORE_SSL=true

# Admin Credentials (Must match AM1)
ADMIN_USERNAME=amadmin
ADMIN_PASSWORD=ChangeMe123!

# Policy Agent Password (Must match AM1)
AGENT_PASSWORD=ChangeMe123!

# Volume Paths (relative to docker-compose.yml location)
CONFIG_VOLUME=./config
LOGS_VOLUME=./logs
INSTALL_PATH=../shared/install

# AM WAR File Location
AM_WAR_FILE=${INSTALL_PATH}/AM-7.5.2.war
